---
import Layout from "../layouts/Layout.astro";
import Profilbild from "../assets/img/Haslinger_Image_serious.jpg";

const email = "haslinger.fabian1503@gmail.com";
const github = "https://github.com/haslingerfabian";
---

<Layout title="Kontakt" description="Kontakt aufnehmen">
  <section
    class="relative flex min-h-screen flex-col items-center justify-center bg-gray-900 px-6 text-white overflow-hidden"
  >
    <!-- animierter Hintergrund -->
    <div class="contact-bg absolute inset-0 -z-10"></div>

    <!-- größere, sichtbare Glows -->
    <div
      class="pointer-events-none absolute -left-40 top-10 h-80 w-80 rounded-full bg-[#0debd8]/30 blur-3xl glow-float-1"
      aria-hidden="true"
    ></div>

    <div
      class="pointer-events-none absolute -right-48 bottom-0 h-96 w-96 rounded-full bg-[#7836cf]/30 blur-3xl glow-float-2"
      aria-hidden="true"
    ></div>

    <div
      class="pointer-events-none absolute left-1/2 top-1/3 h-52 w-52 -translate-x-1/2 rounded-full border border-[#7836cf]/40 glow-ring"
      aria-hidden="true"
    ></div>

    <!-- Inhalt -->
    <div class="relative z-10 flex flex-col items-center">
      <div class="mt-20 mb-6 flex flex-col items-center">
        <img
          src={Profilbild.src}
          alt="Fabian Haslinger"
          class="h-36 w-36 rounded-full border-4 border-[#7836cf] object-cover shadow-xl"
        />
      </div>

      <h1 class="text-4xl font-bold drop-shadow-[2px_2px_0_#7836cf] text-center">
        Kontakt
      </h1>

      <p class="mt-3 text-center text-base text-slate-300 max-w-md">
        Du möchtest mich erreichen? Schreib mir gerne eine Nachricht
        oder besuch mein GitHub-Profil.
      </p>

      <div class="mt-10 w-full max-w-xs space-y-4">
        <a
          href={`mailto:${email}`}
          class="block w-full rounded-lg bg-[#7836cf] px-6 py-3 text-center font-semibold text-white transition hover:bg-[#5f28a5] drop-shadow-[2px_2px_0_#0debd8]"
        >
          Email
        </a>

        <a
          href={github}
          target="_blank"
          class="block w-full rounded-lg bg-slate-800 px-6 py-3 text-center font-semibold text-white transition hover:bg-slate-700 drop-shadow-[2px_2px_0_#7836cf]"
        >
          GitHub
        </a>
      </div>
    </div>
  </section>

  <style>
    /* animierter, leicht „techy“ Hintergrund */
    .contact-bg {
      background-image:
        radial-gradient(circle at 0 0, #0debd811 0, transparent 55%),
        radial-gradient(circle at 100% 100%, #7836cf11 0, transparent 55%),
        linear-gradient(
          135deg,
          #020617 0%,
          #020617 40%,
          #020617 60%,
          #020617 100%
        );
      background-size: 180% 180%;
      animation: contact-bg-move 22s ease-in-out infinite;
    }

    @keyframes contact-bg-move {
      0% {
        background-position: 0% 0%;
      }
      50% {
        background-position: 100% 100%;
      }
      100% {
        background-position: 0% 0%;
      }
    }

    /* Glows bewegen sich langsam gegeneinander */
    @keyframes glow-float-1 {
      0% {
        transform: translate3d(0, 0, 0);
      }
      50% {
        transform: translate3d(20px, 10px, 0);
      }
      100% {
        transform: translate3d(0, 0, 0);
      }
    }

    @keyframes glow-float-2 {
      0% {
        transform: translate3d(0, 0, 0);
      }
      50% {
        transform: translate3d(-25px, -15px, 0);
      }
      100% {
        transform: translate3d(0, 0, 0);
      }
    }

    .glow-float-1 {
      animation: glow-float-1 24s ease-in-out infinite;
    }

    .glow-float-2 {
      animation: glow-float-2 28s ease-in-out infinite;
    }

    /* Ring pulsiert leicht */
    @keyframes glow-ring-pulse {
      0%,
      100% {
        opacity: 0.25;
        transform: translateX(-50%) scale(1);
      }
      50% {
        opacity: 0.5;
        transform: translateX(-50%) scale(1.06);
      }
    }

    .glow-ring {
      animation: glow-ring-pulse 18s ease-in-out infinite;
    }
  </style>
</Layout>
