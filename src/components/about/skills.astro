---
const skills = [
  { name: "C", icon: "c", level: 2 },
  { name: "C#", icon: "csharp", level: 4.5 },
  { name: "Java", icon: "java", level: 4 },
  { name: "Python", icon: "python", level: 3 },
  { name: "Unity", icon: "unity", level: 5 },
  { name: "HTML5", icon: "html5", level: 3 },
  { name: "Bootstrap", icon: "bootstrap", level: 4 },
  { name: "CSS3", icon: "css3", level: 4 },
  { name: "JavaScript", icon: "javascript", level: 2 },
  { name: "TypeScript", icon: "typescript", level: 2 },
  { name: "React", icon: "react", level: 4 },
  { name: "Angular", icon: "angularjs", level: 2 },
  { name: "Node.js", icon: "nodejs", level: 3 },
  { name: "MongoDB", icon: "mongodb", level: 3 },
  { name: "MySQL", icon: "mysql", level: 3 },
  { name: "PostgreSQL", icon: "postgresql", level: 2.5 },
];

function getDeviconUrl(icon: string) {
  return `https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${icon}/${icon}-original.svg`;
}

function renderStars(level: number) {
  const stars: string[] = [];
  for (let i = 1; i <= 5; i++) {
    if (level >= i) stars.push("★");
    else if (level >= i - 0.5) stars.push("⯨");
    else stars.push("☆");
  }
  return stars.join("");
}
---

<section class="site-container mx-auto mt-16 max-w-6xl px-4">
  <div class="flex flex-col items-center gap-6 md:flex-row md:items-center">
    <h2 class="text-center text-4xl font-bold text-white md:text-left">
      <span class="relative inline-block">
        <span class="relative z-10 drop-shadow-[2px_2px_0_#7836cf]">
          Technologien
        </span>
        <span
          class="absolute inset-x-0 bottom-0 -z-10 h-2 translate-y-2 rounded-full bg-gradient-to-r from-[#7836cf] to-[#0debd8] opacity-80"
        ></span>
      </span>
    </h2>
    <span
      class="hidden h-1.5 flex-1 rounded-lg bg-gradient-to-r from-[#7836cf] to-[#0debd8] drop-shadow-[2px_2px_0_#0debd8] md:block"
    ></span>
  </div>

  <div class="mt-10 grid gap-6 grid-cols-2 sm:grid-cols-3 md:grid-cols-4">
    {skills.map((skill) => (
      <div class="group relative">
        <div
          class="absolute inset-0 -z-10 rounded-2xl bg-gradient-to-br from-[#7836cf]/40 via-transparent to-[#0debd8]/40 opacity-0 blur-2xl transition-opacity duration-300 group-hover:opacity-100"
        ></div>

        <div
          class="flex h-full flex-col items-center gap-3 rounded-2xl border border-violet-600/40 bg-slate-900/80 p-5 shadow-[0_0_25px_rgba(0,0,0,0.55)] transition-transform duration-200 group-hover:-translate-y-1 group-hover:border-cyan-400/80 group-hover:bg-slate-900"
        >
          <div
            class="flex h-16 w-16 items-center justify-center rounded-xl bg-slate-800/90"
          >
            <img
              src={getDeviconUrl(skill.icon)}
              alt={skill.name}
              class="h-10 w-10"
              loading="lazy"
            />
          </div>

          <p
            class="mt-1 text-center text-base font-semibold tracking-wide text-white drop-shadow-[1px_1px_0_#7836cf]"
          >
            {skill.name}
          </p>

          <div class="mt-1 flex flex-col items-center gap-1">
            <p class="text-xl leading-none text-amber-400">
              {renderStars(skill.level)}
            </p>
            <p class="text-xs text-slate-300">
              {skill.level.toFixed(1).replace(".", ",")} / 5
            </p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
